<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura_bold"
                android:text="СОЗДАЙ АККАУНТ"
                android:textColor="@color/text"
                android:textFontWeight="700"
                android:textSize="27sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/dark_hint"
                android:text="Заполни, пожалуйста, все поля"/>
        </LinearLayout>
        <com.nakaharadev.roleworld.ui.AuthInputView
            android:id="@+id/sign_up_nickname_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="17sp"
            android:textColor="@color/text"
            app:icon="@drawable/nickname"
            app:hint="Ник"
            android:paddingStart="50dp"
            android:gravity="bottom"
            android:textCursorDrawable="@drawable/auth_input_drawable"
            android:layout_marginBottom="10dp"
            android:singleLine="true"/>
        <com.nakaharadev.roleworld.ui.AuthInputView
            android:id="@+id/sign_up_login_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="17sp"
            android:textColor="@color/text"
            app:icon="@drawable/login"
            app:hint="Логин"
            android:paddingStart="50dp"
            android:gravity="bottom"
            android:textCursorDrawable="@drawable/auth_input_drawable"
            android:layout_marginBottom="10dp"
            android:singleLine="true"/>
        <com.nakaharadev.roleworld.ui.AuthInputView
            android:id="@+id/sign_up_password_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="17sp"
            android:textColor="@color/text"
            app:icon="@drawable/password"
            app:hint="Пароль"
            android:paddingStart="50dp"
            android:gravity="bottom"
            android:textCursorDrawable="@drawable/auth_input_drawable"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:autofillHints="@null"/>
        <com.nakaharadev.roleworld.ui.AuthInputView
            android:id="@+id/sign_up_repeat_password_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="17sp"
            android:textColor="@color/text"
            app:icon="@drawable/repeat_password"
            app:hint="Повтори пароль"
            android:paddingStart="50dp"
            android:gravity="bottom"
            android:textCursorDrawable="@drawable/auth_input_drawable"
            android:layout_marginBottom="20dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:autofillHints="@null"/>
        <TextView
            android:id="@+id/sign_up_done"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@color/text"
            android:text="Готово"
            android:gravity="center"
            android:textSize="17sp"
            android:background="@drawable/auth_done_button_background"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/auth_to_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_ui_1"
            android:textSize="15sp"
            android:text="Есть аккаунт?"/>
    </LinearLayout>
    <TextView
        android:id="@+id/create_new_account_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/hint"
        android:gravity="center"
        android:text="Создав аккаунт, ты принимаешь пользовательское соглашение"
        android:textColorLink="@color/main_ui_2"
        android:layout_marginBottom="5dp"/>
</LinearLayout>