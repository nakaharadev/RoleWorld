<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura_bold"
                android:text="ВХОД"
                android:textColor="@color/text"
                android:textFontWeight="700"
                android:textSize="27sp" />
            <ViewFlipper
                android:id="@+id/sign_in_error_flipper"
                android:inAnimation="@anim/auth_error_flipper_in"
                android:outAnimation="@anim/auth_error_flipper_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/dark_hint"
                    android:text="Заполни, пожалуйста, все поля"/>
                <TextView
                    android:id="@+id/sign_in_error_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/red"
                    android:textFontWeight="700"/>
            </ViewFlipper>
        </LinearLayout>
        <com.nakaharadev.roleworld.ui.AuthInputView
            android:id="@+id/sign_in_login_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="17sp"
            android:textColor="@color/text"
            app:icon="@drawable/login"
            app:hint="Логин"
            android:paddingStart="50dp"
            android:gravity="bottom"
            android:textCursorDrawable="@drawable/auth_input_drawable"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:autofillHints="username"/>
        <com.nakaharadev.roleworld.ui.AuthInputView
            android:id="@+id/sign_in_password_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="17sp"
            android:textColor="@color/text"
            app:icon="@drawable/password"
            app:hint="Пароль"
            android:paddingStart="50dp"
            android:gravity="bottom"
            android:textCursorDrawable="@drawable/auth_input_drawable"
            android:layout_marginBottom="20dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:autofillHints="password"/>
        <TextView
            android:id="@+id/sign_in_done"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@color/text"
            android:text="Готово"
            android:gravity="center"
            android:textSize="17sp"
            android:background="@drawable/auth_done_button_background"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_ui_1"
            android:textSize="15sp"
            android:text="Забыл пароль?"/>
    </LinearLayout>
    <TextView
        android:id="@+id/create_new_account_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/hint"
        android:gravity="center"
        android:text="Возможно, ты хочешь создать аккаунт"
        android:textColorLink="@color/main_ui_2"
        android:layout_marginBottom="5dp"/>
</LinearLayout>